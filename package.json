{
  "name": "electron-ionic-web-boilerplate",
  "version": "0.0.0",
  "main": "electron-config.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "serve:electron": "npm-run-all -p start electron:serve",
    "build": "npm run electron:serve-tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:4200/ && npm run electron:serve-tsc && electron . --serve",
    "build:linux": "npm run build:prod && npx electron-builder build --linux",
    "build:windows": "npm run build:prod && npx electron-builder build --windows",
    "build:mac": "npm run build:prod && npx electron-builder build --mac",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "serve:desktop": "ng serve -o"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.0.2",
    "@angular/common": "^7.0.2",
    "@angular/compiler": "^7.0.2",
    "@angular/core": "^7.0.2",
    "@angular/forms": "^7.0.2",
    "@angular/http": "^7.0.2",
    "@angular/platform-browser": "^7.0.2",
    "@angular/platform-browser-dynamic": "^7.0.2",
    "@angular/router": "^7.0.2",
    "core-js": "^2.5.4",
    "rimraf": "^2.6.2",
    "rxjs": "~6.2.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.10.4",
    "@angular/cli": "^7.0.2",
    "@angular/compiler-cli": "^7.0.2",
    "@angular/language-service": "^7.0.2",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.3.0",
    "electron": "^3.0.7",
    "electron-builder": "^20.31.2",
    "electron-reload": "^1.2.5",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~3.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "npm-run-all": "4.1.3",
    "npx": "10.2.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "wait-on": "2.1.0",
    "webdriver-manager": "12.0.6",
    "typescript": "3.1.6"
  }
}
